{
  "name": "@siprod/api",
  "version": "0.0.0",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .js,.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "db:init": "ts-node src/db/init-db.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "docs:generate": "swagger-jsdoc -d src/swagger/definition.ts -o src/swagger/swagger.json",
    "docs:serve": "swagger-ui-express -o src/swagger/swagger.json"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@siprod/utils": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node-cache": "^4.2.5",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.29.5",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "jose": "^5.9.6",
    "jsonwebtoken": "^9.0.2",
    "logform": "^2.6.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "pg": "^8.13.1",
    "prisma": "^6.1.0",
    "prom-client": "^14.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@siprod/config": "workspace:*",
    "@siprod/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^3.0.2",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/logform": "^1.10.1",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "cookie-parser": "^1.4.7",
    "drizzle-kit": "^0.20.18",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  }
}
