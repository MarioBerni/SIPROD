generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  email     String   @unique
  fullName  String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map("User")
}

enum Role {
  USER
  ADMIN
}
