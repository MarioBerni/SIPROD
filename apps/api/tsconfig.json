{
  "extends": "@siprod/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
    "prisma/**/*",
    "scripts/**/*",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
