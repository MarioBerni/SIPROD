# =================================================================
# SIPROD - Sistema de Gestión de Resultados Policiales y Recursos
# Configuración de Producción
# =================================================================

# -----------------------------
# Configuración de Base de Datos
# -----------------------------
DATABASE_URL=postgresql://postgres:Mario7654321+@localhost:5432/siprod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Mario7654321+
POSTGRES_DB=siprod
POSTGRES_PORT=5432

# -----------------------------
# Configuración del Backend
# -----------------------------
PORT=4000
API_PREFIX=/api
NODE_ENV=production
JWT_SECRET=siprod_jwt_prod_secret_2025_secure_key_32!
NEXT_PUBLIC_JWT_SECRET=siprod_jwt_prod_secret_2025_secure_key_32!
SESSION_SECRET=siprod_session_prod_secret_2025_very_secure_32!
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://siprod.uy

# -----------------------------
# Configuración de Redis
# -----------------------------
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# -----------------------------
# Configuración del Frontend
# -----------------------------
NEXT_PUBLIC_API_URL=/api
FRONTEND_PORT=3000
NEXT_TELEMETRY_DISABLED=1

# -----------------------------
# Configuración de Logging
# -----------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# -----------------------------
# Configuración de Seguridad
# -----------------------------
SSL_ENABLED=true
JWT_EXPIRATION=12
MAX_LOGIN_ATTEMPTS=5
SECURE_COOKIES=true
COOKIE_DOMAIN=siprod.uy
SESSION_SECRET=siprod_session_prod_secret_2025!
ENABLE_RATE_LIMIT=true
ENABLE_HELMET=true