# =================================================================
# SIPROD - Sistema de Gestión de Resultados Policiales y Recursos
# Archivo de configuración de variables de entorno
# =================================================================

# -----------------------------
# Configuración de Base de Datos
# -----------------------------
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/siprod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=siprod
POSTGRES_PORT=5432

# -----------------------------
# Configuración del Backend
# -----------------------------
# API y Servidor
PORT=4000
API_PREFIX=/api
NODE_ENV=development

# Seguridad
JWT_SECRET=your_jwt_secret
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS y Acceso
CORS_ORIGIN=http://localhost:3000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# Logging
LOG_LEVEL=info

# -----------------------------
# Configuración del Frontend
# -----------------------------
NEXT_PUBLIC_API_URL=http://127.0.0.1:4000/api
FRONTEND_PORT=3000
NEXT_TELEMETRY_DISABLED=1

